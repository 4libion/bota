<%- include('header'); -%>

<nav>
    <h3><a href="/">Elearning</a></h3>
    <ul>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Register</a></li>
    </ul>
</nav>

<body>
	<div class="container col-sm-12" id="mainform">
		<div id="signupbox" style=" margin-top:50px; margin-left: 335px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div style="margin-right: 140px;" class="panel-title">User Sign Up</div>
				</div> 
				<div class="panel-body" >
					<form class="form-horizontal" role="form" method="post" action="/signup">
						<% if (message.length > 0) { %>
							<div class="alert alert-danger col-sm-9"><%= message %></div>
						<% } %>
						<div id="signupalert" style="display:none" class="alert alert-danger">
							<p>Error:</p>
							<span></span>
						</div>
						<div class="form-group">
							<label style="margin-right: 145px;" for="email" class="col-md-3 control-label">Email</label>
							<div class="col-md-9">
								<input type="email" class="form-control" name="email" placeholder="email" required>
							</div>
						</div>
						<div class="form-group">
							<label style="margin-right: 140px;" for="password" class="col-md-3 control-label">Password</label>
							<div class="col-md-9">
								<input type="password" class="form-control" name="password" placeholder="Password" required>
							</div>
						</div>
						<div class="form-group">
							<label style="margin-right: 140px;" for="name" class="col-md-3 control-label">Name</label>
							<div class="col-md-9">
								<input type="text" class="form-control" name="name" placeholder="Name" required>
							</div>
						</div>					
						<div class="form-group">						            
							<div class="col-md-offset-3 col-md-9">
								<button style="margin-top: 10px;" id="btn-signup" type="submit" class="btn btn-success"><i class="icon-hand-right"></i>   Sign Up</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
<%- include('footer'); -%>