<%- include('header'); -%>
<nav>
    <h3><a href="/">Elearning</a></h3>
    <ul>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Register</a></li>
    </ul>
</nav>
<body>
	<div class="container">   
		<div id="loginbox" style="margin-top:50px;" class="mainbox">                   
			<div class="panel panel-info" >
				<div class="panel-heading">
					<div class="panel-title">User Sign In</div>
				</div>    
				<div class="panel-body" >
					<% if (message.length > 0) { %>
						<div class="alert alert-danger col-sm-12"><%= message %></div>
					<% } %>
					<form id="loginform" class="form-horizontal" role="form" method="POST" action="/login">
						<div style="margin-bottom: 25px; margin: auto;" class="input-group">
							<input id="email" type="text" class="form-control" name="email" value="" placeholder="john@doe.com">                               
						</div>
						<div style="margin-bottom: 25px; margin: auto;" class="input-group">
							<input id="login-password" type="password" class="form-control" name="password" placeholder="password">
						</div>
						<div style="margin-top:10px" class="form-group">						
							<div class="col-sm-12 controls">
								<button id="btn-login" type="submit" class="btn btn-success">Login</button>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12 control">
								<div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
									Don't have an account!
									<a href="/signup">Sign Up Here</a>
								</div>
							</div>
						</div>   
					</form>
				</div>                    
			</div> 
		</div>
	</div>
<%- include('footer'); -%>